mixin nav(activeName)
    nav.main-navi(id="mainNavi")
        #naviToggle.navi-toggle
            img(src='/svg/59_w.svg')
        ul.nav-items(id="naviList", class='#{activeName}')
            each item in locals.nav
                if item.name == activeName
                    li.nav-item.active
                        a.button.transparent(alt=item.name, href=item.url)= item.name
                else
                    li.nav-item
                        a.button.transparent(alt=item.name, href=item.url)= item.name
