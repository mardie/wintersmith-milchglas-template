!!! 5
block vars
    - var bodyclass = null;
    - var containerClass = null;
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scale=0')
            block description
                meta(name="description", content="notes on design, UX & code by Andy Hulstkamp")
            title
                block title
                    = locals.name
            link(rel='author', href='https://plus.google.com/u/0/103966119359439831864/about')
            link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700|Open+Sans')
            link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.2.0/pure-min.css')
            link(rel='stylesheet', href='/css/main.css')
            link(rel='stylesheet', href='/css/monokai.css')
            //link(rel='stylesheet', href='/css/ah.min.css')
    body(class=bodyclass)
        div.container(class=containerClass)
            block header
                header.header
                    div.content-wrap
                        div
                            div
                                div.image
                                    div.photo
                                div.signature
                                    h1.heading
                                        a(href=locals.url)= locals.name
                                    p.description= locals.description
            include ../mixins/nav
            block navigation
                mixin nav('HOME')
            div#content.content
                div.content-wrap
                    block content
                        h2 Welcome to zombocom!
            include ../mixins/paging
            block paging
                mixin paging()
            block footer
                footer
                    div.content-wrap
                        include ../mixins/footer
                        mixin footer()
                        //
                            section.about
                            !=contents['about.md'].html
                        section.pure-g-r
                            div.copy.pure-u-1
                                span &copy; #{ new Date().getFullYear() }
                                span  content, design &amp; template
                                a(href='https://github.com/ndhu/downhill') &nbsp;Downhill&nbsp;
                                span by #{ locals.owner } &mdash; powered by&nbsp;
                                a(href='https://github.com/jnordberg/wintersmith') Wintersmith&nbsp;SSG
          //- please leave the "powered by" if you use the design
        script(type="text/javascript", src='/scripts/highlight.pack.js').
        script(type="text/javascript", src='/scripts/ah.js').
        //script(type="text/javascript", src='/scripts/ah.min.js').
